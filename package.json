{
  "name": "common-tools",
  "version": "1.0.0",
  "description": "common javaScript tools",
  "scripts": {
    "build": "node scripts/build.js",
    "test": "jest --runInBand --coverage --bail"
  },
  "author": "huangjie",
  "license": "ISC",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  }
}
